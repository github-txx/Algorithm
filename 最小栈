class MinStack {
    
    private Stack<Integer> data;
    
    private Stack<Integer> helper;

    /** initialize your data structure here. */
    public MinStack() {
        data = new Stack<Integer>();
        helper = new Stack<Integer>();
    }
    
    public void push(int x) {
        data.push(x);
        if(helper.isEmpty() || helper.peek()>=x){
            helper.push(x);
        }
    }
    
    public void pop() {
        if(!data.isEmpty()){
            int temp = data.pop();
            if(temp == helper.peek()){
                helper.pop();
            }
        }
    }
    
    public int top() {
        if(data.isEmpty()){
            throw new RuntimeException("栈中元素为空！");
        }
        return data.peek();
    }
    
    public int getMin() {
        if(helper.isEmpty()){
            throw new RuntimeException("栈中元素为空！");
        }
        return helper.peek();
    }
}
